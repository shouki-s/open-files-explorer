{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"style": {
				"useBlockStatements": "warn",
				"useThrowOnlyError": "warn"
			},
			"suspicious": { "noDoubleEquals": "warn" }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		},
		"globals": []
	},
	"overrides": [{ "include": ["**/*.ts"] }, { "include": ["**/*.ts"] }]
}
