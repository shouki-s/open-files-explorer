{
	"name": "open-files-explorer",
	"displayName": "open-files-explorer",
	"description": "",
	"version": "0.0.1",
	"publisher": "shouki-s",
	"engines": {
		"vscode": "^1.97.0"
	},
	"categories": ["Other"],
	"activationEvents": ["onView:openFilesExplorer"],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "openFilesExplorer.closeFile",
				"title": "Close",
				"icon": "$(close)"
			},
			{
				"command": "openFilesExplorer.unpinEditor",
				"title": "Unpin",
				"icon": "$(pinned)"
			},
			{
				"command": "openFilesExplorer.closeFolder",
				"title": "Close All Editors in Folder",
				"icon": "$(close-all)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "openFilesExplorer",
					"name": "Open Files Explorer",
					"icon": "media/icon.svg",
					"contextualTitle": "Open Files Explorer"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "openFilesExplorer.closeFile",
					"when": "view == openFilesExplorer && viewItem == file",
					"group": "inline@1"
				},
				{
					"command": "openFilesExplorer.unpinEditor",
					"when": "view == openFilesExplorer && viewItem =~ /pinnedFile/",
					"group": "inline@2"
				},
				{
					"command": "openFilesExplorer.closeFolder",
					"when": "view == openFilesExplorer && viewItem == folder",
					"group": "inline@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"check-types": "tsc --noEmit",
		"lint": "biome check",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.97.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.3"
	},
	"pnpm": {
		"ignoredBuiltDependencies": ["@biomejs/biome", "esbuild"],
		"onlyBuiltDependencies": ["@biomejs/biome", "esbuild"]
	}
}
